<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContractOffersActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/avaliable_contractors"
        android:textSize="30sp" />

    <Button
        android:id="@+id/avalible_contractors_return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/back" />

    <TextView
        android:id="@+id/Contractor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="50dp"
        android:text="@string/n_a"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Contractor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Contractor1"
        android:layout_below="@+id/Contractor1"
        android:layout_marginTop="49dp"
        android:text="@string/n_a"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Contractor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Contractor2"
        android:layout_below="@+id/Contractor2"
        android:layout_marginTop="50dp"
        android:text="@string/n_a"
        android:textSize="20sp" />

    <Button
        android:id="@+id/inspect_contractor_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Contractor1"
        android:layout_alignBottom="@+id/Contractor1"
        android:layout_alignRight="@+id/textView2"
        android:text="@string/inspect" />

    <Button
        android:id="@+id/inspect_contractor_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Contractor2"
        android:layout_alignBottom="@+id/Contractor2"
        android:layout_alignRight="@+id/inspect_contractor_1_button"
        android:text="@string/inspect" />

    <Button
        android:id="@+id/inspect_contractor_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Contractor3"
        android:layout_alignBottom="@+id/Contractor3"
        android:layout_alignLeft="@+id/inspect_contractor_2_button"
        android:text="@string/inspect" />

</RelativeLayout>